<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EditMyTripDialogFragment">

    <LinearLayout
        android:id="@+id/linLayUniName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUni"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/uni_location" />

        <TextView
            android:id="@+id/editTripUniName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/black" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/editTripTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayUniName"
        android:layout_margin="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="25dp"
                android:text="@string/check_in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/check_out" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/editTripSwitchMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:theme="@style/MySwitch"
                app:switchPadding="10dp" />

            <TextView
                android:id="@+id/editTripMonCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editTripMonCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/editTripSwitchTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:theme="@style/MySwitch"
                app:switchPadding="10dp" />

            <TextView
                android:id="@+id/editTripTueCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editTripTueCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/editTripSwitchWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:theme="@style/MySwitch"
                app:switchPadding="10dp" />

            <TextView
                android:id="@+id/editTripWedCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editTripWedCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/editTripSwitchThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                android:theme="@style/MySwitch"
                app:switchPadding="10dp" />

            <TextView
                android:id="@+id/editTripThuCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editTripThuCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/editTripSwitchFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                android:theme="@style/MySwitch"
                app:switchPadding="10dp" />

            <TextView
                android:id="@+id/editTripFriCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editTripFriCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/_00_00"
                android:textColor="@color/black"
                android:textSize="@dimen/timeTxtSize"
                android:visibility="invisible" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTripTableLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelEditTrip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="#FA0000"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSaveEditTrip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@drawable/button"
            android:text="@string/save"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>